# ChemParser Environment Variables
# Copy this to .env and fill in your values

# ===== Flask Settings =====
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=mol2chemfig_server.py

# ===== Server Ports =====
MOL2CHEMFIG_PORT=5001
MOLECULEVIEWER_PORT=5000
PUBCHEM_PORT=5002
LAUNCHER_PORT=3000

# ===== Mol2ChemFig Settings =====
MOL2CHEMFIG_BACKEND=http://localhost:8000
MOL2CHEMFIG_CACHE_DIR=./cache
MOL2CHEMFIG_OUTPUT_DIR=./mol2chemfig_storage

# ===== MoleculeViewer Settings =====
MOLECULEVIEWER_SVG_CACHE=./MoleculeViewer/svg-cache
MOLECULEVIEWER_PUBCHEM_CACHE=./pubchem-cache

# ===== PubChem Settings =====
PUBCHEM_API_URL=https://pubchem.ncbi.nlm.nih.gov/rest/pug/compound
PUBCHEM_API_KEY=
PUBCHEM_CACHE_DIR=./pubchem-cache

# ===== OPSIN Settings (Optional) =====
# Used for converting chemical names to 3D SMILES
OPSIN_JAR_PATH=./MoleculeViewer/opsin-cli.jar
OPSIN_ENABLED=true

# ===== Docker Settings =====
# If using Docker for mol2chemfig backend
DOCKER_ENABLED=false
DOCKER_BACKEND_URL=http://localhost:8000

# ===== Logging =====
LOG_LEVEL=INFO
LOG_FILE=./server.log

# ===== Cache Settings =====
CACHE_ENABLED=true
CACHE_MAX_SIZE=500
CACHE_EXPIRY_HOURS=24

# ===== CORS Settings =====
CORS_ENABLED=true
CORS_ORIGINS=*

# ===== API Settings =====
API_TIMEOUT=30
API_MAX_RETRIES=3

# ===== Frontend Settings =====
VITE_API_URL=http://localhost:5001
VITE_DEBUG=true

# ===== Development Settings =====
DEBUG_MODE=true
VERBOSE_LOGGING=false
SHOW_PROCESSING_STEPS=true

# ===== Optional: External Services =====
# Add any third-party API keys here
EXTERNAL_API_KEY=

# ===== Deployment Settings (if deploying to Vercel/Heroku) =====
NODE_ENV=development
PRODUCTION_URL=
VERCEL_ENV=
